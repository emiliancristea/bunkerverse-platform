#!/bin/bash

# Pre-commit hook for BUNKERVERSE Platform
# Implements security-first development practices as per Task 0.1 requirements

set -e

echo "ðŸ” Running pre-commit checks..."

# Check if we're in the correct directory
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ Not in project root directory"
    exit 1
fi

# Function to check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

echo "ðŸ“‹ Running Rust checks..."

# Check if any Rust files are staged
rust_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(rs)$' || true)

if [ -n "$rust_files" ]; then
    echo "ðŸ¦€ Found Rust files, running cargo checks..."
    
    # Format check
    if command_exists cargo; then
        echo "ðŸŽ¨ Running cargo fmt..."
        cargo fmt --all -- --check || {
            echo "âŒ Rust formatting issues found. Run 'cargo fmt --all' to fix."
            exit 1
        }
        
        # Clippy check with strict settings
        echo "ðŸ” Running cargo clippy..."
        cargo clippy --workspace --all-targets -- \
            -D warnings \
            -A clippy::all \
            -W clippy::pedantic \
            -W clippy::nursery \
            -W clippy::cargo || {
            echo "âŒ Clippy issues found. Fix them before committing."
            exit 1
        }
        
        # Security audit
        echo "ðŸ›¡ï¸ Running cargo audit..."
        if command_exists cargo-audit; then
            cargo audit --deny warnings || {
                echo "âŒ Security vulnerabilities found. Fix them before committing."
                exit 1
            }
        else
            echo "âš ï¸ cargo-audit not installed. Install with: cargo install cargo-audit"
        fi
    else
        echo "âŒ Cargo not found. Please install Rust toolchain."
        exit 1
    fi
else
    echo "â„¹ï¸ No Rust files staged, skipping Rust checks"
fi

echo "ðŸ“‹ Running C++ checks..."

# Check if any C++ files are staged
cpp_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cpp|cc|cxx|h|hpp|hxx)$' || true)

if [ -n "$cpp_files" ]; then
    echo "ðŸ”§ Found C++ files, running checks..."
    
    # Basic compilation check would go here
    # For now, just validate they exist and are not empty
    for file in $cpp_files; do
        if [ ! -s "$file" ]; then
            echo "âŒ Empty C++ file: $file"
            exit 1
        fi
    done
    
    echo "âœ… C++ files validated"
else
    echo "â„¹ï¸ No C++ files staged, skipping C++ checks"
fi

echo "ðŸ“‹ Running QML checks..."

# Check if any QML files are staged
qml_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(qml|js)$' || true)

if [ -n "$qml_files" ]; then
    echo "ðŸŽ¨ Found QML files, running basic validation..."
    
    # Basic QML validation
    for file in $qml_files; do
        if [ ! -s "$file" ]; then
            echo "âŒ Empty QML file: $file"
            exit 1
        fi
    done
    
    echo "âœ… QML files validated"
else
    echo "â„¹ï¸ No QML files staged, skipping QML checks"
fi

echo "ðŸ“‹ Running general file checks..."

# Check for potential secrets
echo "ðŸ” Checking for potential secrets..."
secret_patterns=(
    "password.*="
    "secret.*="
    "token.*="
    "key.*="
)

staged_files=$(git diff --cached --name-only --diff-filter=ACM | grep -v ".md$" || true)

for pattern in "${secret_patterns[@]}"; do
    if [ -n "$staged_files" ]; then
        matches=$(echo "$staged_files" | xargs grep -l -i "$pattern" 2>/dev/null || true)
        if [ -n "$matches" ]; then
            echo "âŒ Potential sensitive information found containing '$pattern' - review carefully"
            echo "$matches"
            exit 1
        fi
    fi
done

# Check file sizes (prevent accidentally committing large files)
echo "ðŸ“ Checking file sizes..."
large_files=$(git diff --cached --name-only --diff-filter=ACM | xargs ls -la 2>/dev/null | awk '$5 > 10485760 {print $9, $5}' || true)
if [ -n "$large_files" ]; then
    echo "âŒ Large files detected (>10MB):"
    echo "$large_files"
    echo "Consider using Git LFS for large files"
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
echo ""
echo "ðŸ’¡ Common fixes:"
echo "   â€¢ Run 'cargo fmt --all' to format Rust code"
echo "   â€¢ Run 'cargo clippy --fix' to auto-fix some linting issues" 
echo "   â€¢ Run 'cargo audit --fix' to update vulnerable dependencies"