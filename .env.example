# Bunkerverse Platform - Local Development Environment Configuration
# Copy this file to .env and adjust values as needed

#################################################
# Global Configuration
#################################################

# Logging level (debug, info, warn, error)
RUST_LOG=info

# Dual-mode configuration for crypto features
ENABLE_CRYPTO=false
SHOW_CRYPTO=false

#################################################
# Database Configuration
#################################################

# PostgreSQL Database
POSTGRES_DB=bunkerverse
POSTGRES_USER=bunkerverse
POSTGRES_PASSWORD=your_postgres_password_here

#################################################
# Cache Configuration  
#################################################

# Redis Cache
REDIS_PASSWORD=your_redis_password_here

#################################################
# External Services
#################################################

# Elasticsearch
ELASTIC_PASSWORD=your_elastic_password_here

# JWT for authentication services
JWT_SECRET=dev-jwt-secret-key-change-in-production

# Payment processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here

#################################################
# Blockchain Configuration
#################################################

# Arbitrum Layer 2 Chain ID
L2_CHAIN_ID=412346

#################################################
# Development Tools
#################################################

# Enable development features
DEV_MODE=true

# Mock external services (IPFS, Arweave)
ENABLE_MOCKS=true

#################################################
# Security Settings
#################################################

# CORS settings for development
CORS_ORIGIN=*

# Rate limiting (requests per minute)
RATE_LIMIT=1000

# API Key for inter-service communication (optional)
INTERNAL_API_KEY=dev-internal-key-change-in-production