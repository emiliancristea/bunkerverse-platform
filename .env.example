# Bunkerverse Platform - Local Development Environment Configuration Template
# Copy this file to .env and customize for your local setup

#################################################
# Dual-Mode Configuration (Core Feature)
#################################################
# Controls whether crypto features are enabled across all services
ENABLE_CRYPTO=false
SHOW_CRYPTO=false

#################################################
# Rust Application Configuration
#################################################
RUST_LOG=info
RUST_BACKTRACE=1

#################################################
# Database Configuration
#################################################
# PostgreSQL Database
POSTGRES_DB=bunkerverse
POSTGRES_USER=bunkerverse
POSTGRES_PASSWORD=dev123

# Redis Cache
REDIS_PASSWORD=dev123

#################################################
# Security Configuration
#################################################
# JWT Secret for identity service (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-jwt-secret-key-change-in-production

# Stripe Configuration for payment service
STRIPE_SECRET_KEY=sk_test_

#################################################
# Smart Stub Behavior Configuration
#################################################
# Latency simulation settings (milliseconds)
LATENCY_MIN_MS=50
LATENCY_MAX_MS=500

# Error injection settings (percentage as decimal, e.g., 0.05 = 5%)
ERROR_RATE=0.05

# Network condition simulation: good, poor, variable
NETWORK_CONDITION=good

#################################################
# Service Port Configuration
#################################################
# Smart Stub Service Ports
MARKETPLACE_PORT=8081
INDEXER_PORT=8082
IDENTITY_PORT=8083
AI_DATA_PORT=8084
ACCOUNT_PORT=8085
FEEDBACK_PORT=8086
MISSION_PORT=8087
PAYMENT_PORT=8088
SOCIAL_PORT=8089

#################################################
# External Service URLs
#################################################
# IPFS Gateway Mock
IPFS_GATEWAY_URL=http://localhost:8080

# Arweave Gateway Mock  
ARWEAVE_GATEWAY_URL=http://localhost:1984

#################################################
# Blockchain Configuration
#################################################
# Ethereum L1 Node (Anvil)
ETHEREUM_RPC_URL=http://localhost:8545

# Arbitrum L2 Sequencer
ARBITRUM_RPC_URL=http://localhost:8547

#################################################
# Development Utilities
#################################################
# Enable detailed request/response logging
ENABLE_REQUEST_LOGGING=true

# Enable performance metrics collection
ENABLE_METRICS=true

# Development mode features
DEVELOPMENT_MODE=true
